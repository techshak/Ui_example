<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeekThreeTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="color">@color/teal_200</item>
    </style>

    <style name="CustomButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomButtonTheme2" >
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:strokeColor">@color/teal_200</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@color/teal_200</item>
    </style>
</resources>